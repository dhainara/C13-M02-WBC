<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" rel="stylesheet">
    <title> Home </title>
</head>

<body>
    <%- include('./partials/header.ejs') %>

    <main>
        <!--Card comeÃ§a aqui-->
        <% pokemon.forEach(element=> { %>
            <div class="card">
                <div class="numero">
                    <%= element.numero %>
                </div>

                <div class="nome">
                    <%= element.nome %>
                </div>

                <div class="tipo">
                    <%= element.tipo %>
                </div>

                <div class="imagem">
                    <%= element.imagem %>
                </div>

                <div class="descricao">
                    <%= element.descricao %>
                </div>

                <div class="altura">
                    <%= element.altura %>
                </div>

                <div class="peso">
                    <%= element.peso %>
                </div>

                <div class="categoria">
                    <%= element.categoria %>
                </div>

                <div class="habilidade">
                    <%= element.habilidade %>
                </div>
            </div>

            <% }) %>
        <!--Card termina aqui-->
    </main>

    <%- include('./partials/footer.ejs') %> 
</body>
</html>